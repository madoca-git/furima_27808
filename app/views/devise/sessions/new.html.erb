<%= render "shared/second-header"%>

<%= form_with model: @user, class:'registration-main', url: "/users/sign_in", local: true do |f| %>
<div class='login-form-wrap'>
  <div class='contents-top'>
    <div class='login-form-header'>
        <span class='under'>SNSアカウントでログイン</span>
    </div>
    <div class="form-group contents-btn">
      <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'registeration-content', method: :post do %>
        <i class="fa fa-google">Googleでログイン</i>
      <% end %>
    </div>
    <div class="form-group contents-btn">
      <%= link_to user_facebook_omniauth_authorize_path, class: 'registeration-content', method: :post do %>
        <i class="fa fa-facebook-f">Facebookでログイン</i>
      <% end %>
    </div>
    <br>
    <br>
    <span class="or">───── もしくは ─────</span>
    <div class='login-form-header'>
        <span class='under'>メールアドレスでログイン</span>
    </div>
    <div class="form-group">
      <div class='login-form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", placeholder:"" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-red-btn" %>
    </div>
    <br>
    <br>
    <br>
  </div>
</div>

<% end %>

<%= render "shared/second-footer"%>
